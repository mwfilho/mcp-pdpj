{
  "version": 2,
  "builds": [
    { 
      "src": "index.js", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**", "tools/**", "package.json"]
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/index.js" }
  ],
  "installCommand": "npm install && npm run build",
  "env": {
    "NODE_ENV": "production"
  }
}
